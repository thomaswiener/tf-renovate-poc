{
  "extends": [
    "config:base",
    "terraform:providers"
  ],
  "platform": "github",
  "githubHost": "https://github.com",
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "merge",
  "dependencyDashboard": true,
  "schedule": ["before 3am on monday"],
  "packageRules": [
    {
      "matchManagers": ["terraform"],
      "matchPackageNames": ["hashicorp/aws", "hashicorp/azurerm"],
      "enabled": true,
      "schedule": ["before 3am on monday"]
    },
    {
      "matchManagers": ["terraform"],
      "matchPackageNames": ["hashicorp/google"],
      "enabled": true,
      "schedule": ["before 3am on tuesday"]
    }
  ]
}